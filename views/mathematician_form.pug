extends layout

block content
  h1#title= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Mathematician Name' name='name' required='true' value=(undefined===mathematician ? '' : mathematician.name))
    br
    div.form-group
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text' placeholder='Mathematician Family Name' name='family_name' required='true' value=(undefined===mathematician ? '' : mathematician.family_name))
    br
    div.form-group
      label(for='date_birth') Date of birth:
      input#date_birth.form-control(type='date' name='date_birth' value=(undefined===mathematician ? '' : mathematician.date_birth_yyyy_mm_dd) )
      br
      label(for='date_death') Date of Death:
      input#date_death.form-control(type='date', name='date_death', value=(undefined===mathematician ? '' : mathematician.date_death_yyyy_mm_dd) )
    br
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
