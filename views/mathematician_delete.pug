extends layout

block content
  h1.li3 #{title} : #{mathematician.fullname}

  if numbers.length > 0
    div(style='margin-top:20px;margin-left:20px')
      p #[strong Sorry but this mathematician have dependent numbers, please delete them before.]

      each number in numbers
        dt
          dd
            hr
            a(href=number.url class='li2') #{number.name}
          dl

  if formulas.length > 0
    div(style='margin-top:20px;margin-left:20px')
      p #[strong Sorry but this mathematician have dependent formulas, please delete them before.]

      each formula in formulas
        dt
          dd
            hr
            a(href=formula.url class='li4') #{formula.name}
          dl
  else
    p Do you want to delete this mathematician?
    div.form-group
      form(method='POST' action='')
        input#mathematician.form-content(type='hidden' name='mathematicianid' value=mathematician._id)
        button.btn.btn-primary(type='submit') Delete
