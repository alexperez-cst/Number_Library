extends layout

block content
  h1#title= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Number Type Name' name='name' required='true' value=(undefined===numbertype ? '' : numbertype.name))
    br
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
